{
    "manifest_version": 3,
  
    "name": "football",
    "description": "Football results",
    "version": "1.0",

    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png"
    },

    "action": {
        "default_title": "Show football results",
        "default_popup": "dist/index.html"
    },

    "permissions": ["storage"],

    "host_permissions": [ 
        "https://api.football-data.org/*",
        "https://api.premierliga.ru/*"
    ]
}